#!/bin/bash
function jacksparrow() {
  if [ -f /usr/bin/qmake-qt4 ]
  then
    /usr/bin/qmake-qt4 -spec /usr/share/qt4/mkspecs/linux-g++ -o build/Makefile src/ishara.pro;
  else
    /usr/bin/qmake -spec /usr/share/qt4/mkspecs/linux-g++ -o build/Makefile src/ishara.pro;
  fi
}

if [ -d build ]
then
  jacksparrow;
else
  mkdir build;
  jacksparrow;
fi